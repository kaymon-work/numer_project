# ----- Stage 1: Build -----
FROM node:20-alpine AS builder
WORKDIR /app

COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build    # ได้ไฟล์ static ที่ /app/dist

# ----- Stage 2: Serve -----
FROM nginx:alpine
# เอา default ออก (ไม่บังคับ แต่สะอาดกว่า)
RUN rm /etc/nginx/conf.d/default.conf
COPY nginx.conf /etc/nginx/conf.d/app.conf

# คัดลอกไฟล์ static ไปยังโฟลเดอร์เสิร์ฟของ nginx
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
